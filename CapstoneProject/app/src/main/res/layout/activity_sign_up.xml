<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignUpActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"
                  android:textSize="20dp" android:text="이름 : " android:gravity="center"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:inputType="text" android:hint="이름을 입력하세요" android:gravity="center"
                  android:id="@+id/editName"
                  android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"
                  android:textSize="20dp" android:text="아이디 : " android:gravity="center"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:hint="아이디를 입력하세요" android:gravity="center"
                  android:id="@+id/editId"
                  android:inputType="text" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_weight="1">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"
                  android:textSize="20dp" android:text="비밀번호 : " android:gravity="center"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:hint="비밀번호를 입력하세요" android:gravity="center"
                  android:id="@+id/editPassword"
                  android:inputType="textPassword" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_weight="1">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"
                  android:textSize="20dp" android:text="비밀번호 확인 : " android:gravity="center"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:hint="비밀번호를 확인합니다" android:gravity="center"
                  android:id="@+id/editConfirm"
                  android:inputType="textPassword" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_weight="1">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2"
                  android:textSize="20dp" android:text="나이 : " android:gravity="center"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:hint="나이를 입력해주세요" android:gravity="center"
                  android:id="@+id/editAge"
                  android:inputType="number" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:gravity="center"
                  android:layout_weight="1">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/submitBtn" android:text="가입"
        />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/resetBtn" android:text="초기화"
        />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/returnBtn" android:text="돌아가기"
        />
    </LinearLayout>
</LinearLayout>